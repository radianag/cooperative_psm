<?xml version="1.0" ?>
<robot name="dvrk_psm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Macros -->
  <xacro:include filename="$(find dvrk_model)/PSM/psm.urdf.xacro"/>

  <link name="world">
      <origin xyz="0.0 0.0 0.0"/>  
  </link>

  <joint name="world_joint" type="fixed">
      <parent link="world"/>
      <child link="camera"/>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
  </joint>

  <link name="camera">
  <origin rpy="0.0 0.0 0.0" xyz="0.0 0.2 0.8"/>
  </link>

  <xacro:psm 
      prefix="one_"
      parent_link="camera"
      xyz="-0.5 0.0 0.5" rpy="-0.3 3.14 -0.256"/>
  <xacro:psm 
      prefix="two_"
      parent_link="camera"
      xyz="0.5 0.0 0.5" rpy="0.2 3.14 0.4"/>
  <xacro:psm 
      prefix="three_"
      parent_link="camera"
      xyz="0.75 1 0.5" rpy="0.2 3.14 2"/>  
</robot>
